{
    "env": {
        "browser": true
    },
    "extends": [
        "plugin:import/recommended",
        "plugin:import/errors",
        "plugin:import/warnings",
        "plugin:import/typescript",
        "plugin:prettier/recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "eslint-plugin-prettier",
        "import",
        "prettier"
    ],
    "rules": {
        "no-console": "off",
        "import/prefer-default-export": 0,
        "no-underscore-dangle": "off",
        "prettier/prettier": [
            "error",
            {
                "printWidth": 120,
                "singleQuote": false,
                "trailingComma": "all",
                "bracketSpacing": true,
                "jsxBracketSameLine": false,
                "tabWidth": 4,
                "semi": true,
                "endOfLine": "auto"
            }
        ]
    }
  } 