<div class="w-100 {{ styles.dialog-wrapper }}">
    {{#if selectedChat}}
        {{{ header }}}
        <div class="{{ styles.dialog-wrapper__message-box }}">
            {{#if messages}}
                {{#each messages}}
                    {{{ this }}}
                {{/each}}
            {{else}}
                {{{ noMessages }}}
            {{/if}}
        </div>
        {{{ field }}}
    {{else}}
        <div class="empty-wrapper m-auto">
            {{{ noChat }}}
        </div>
    {{/if}}
</div>
