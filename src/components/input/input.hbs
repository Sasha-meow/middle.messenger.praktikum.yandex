<input
    id="{{ name }}"
    type={{ type }}
    class="w-100 {{ styles.primary-input }} {{#if hasPrefix}}{{ styles.with-prefix }}{{/if}} {{#if hasPostfix}}{{ styles.with-postfix }}{{/if}}"
    name={{ name }}
    {{#if minLength}}minlength="{{ minLength }}"{{/if}}
    {{#if maxLength}}maxlength="{{ maxLength }}"{{/if}}
    {{#if placeholder}}placeholder="{{ placeholder }}"{{/if}}
    value={{ value }}
>
